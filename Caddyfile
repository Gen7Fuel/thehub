:3000 {
    log {
        output stdout
        format console
        level DEBUG
    }
    
    root * /usr/share/caddy
    file_server

    # === WebSocket routes (Socket.IO) ===
    handle /socket.io/* {
        reverse_proxy backend:5000 {
            header_up Upgrade {>Upgrade}
            header_up Connection {>Connection}
            header_up Host {>Host}
            header_up X-Real-IP {>X-Real-IP}
            header_up X-Forwarded-For {>X-Forwarded-For}
            header_up X-Forwarded-Proto {>X-Forwarded-Proto}
        }
    }

    # === API routes ===
    handle /api/* {
        reverse_proxy backend:5000 {
            header_up Host {>Host}
            header_up X-Real-IP {>X-Real-IP}
            header_up X-Forwarded-For {>X-Forwarded-For}
            header_up X-Forwarded-Proto {>X-Forwarded-Proto}
        }
    }

    # === CDN routes ===
    handle /cdn/* {
        reverse_proxy cdn:5001
    }

    # === Frontend routing (React SPA) ===
    handle {
        try_files {path} /index.html
    }
}